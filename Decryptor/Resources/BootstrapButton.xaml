            </Setter.Value>
        </Setter>
        <Setter Property="Foreground">
            <Setter.Value>
                <SolidColorBrush Color="#333" />
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver"
                     Value="True">
                <Setter Property="Background"
                        Value="#e6e6e6" />
                <Setter Property="BorderBrush"
                        Value="#adadad" />
            </Trigger>
            <Trigger Property="IsPressed"
                     Value="True">
